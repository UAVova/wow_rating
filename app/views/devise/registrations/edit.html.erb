<div class="profile">

<%= form_for(resource, as: resource_name, url: profile_path, html: { multipart: true, method: :put, class: 'profile-form'}) do |f| %>
  <%= devise_error_messages! %>
  <fieldset>
    <legend class="profile-form">Edit Profile</legend>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :avatar %>
      <label class="avatarUpload">
        <%= f.file_field :avatar %>
        <span>Choose avatar</span>
      </label>
      <% if f.object.avatar.file? && devise_error_messages!.nil? %>
        <center class="rules">
            <%= f.check_box :delete_avatar %>
            <%= f.label :delete_avatar, 'Delete avatar!', :class => 'light' %>
        </center>
        <% end %>
    </div>

    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <% if f.object.encrypted_password.present? %>
    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Update", :class => 'profile-form' %>
    </div>
  </fieldset>
<% end %>

