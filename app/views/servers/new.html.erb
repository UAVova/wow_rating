<div class="profile">

<%= form_for(@server, url: server_new_path, html: { multipart: true, method: :post, class: 'profile-form'}) do |f| %>
  <fieldset>
    <legend class="reg-form"><span class="number">1</span>Server info</legend>
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true %>

    <div class="field">
      <%= f.label :description %>
      <i>(First 200 symbols will be displayed on the main page)</i>
      <%= f.text_area :description %>
    </div>

    <div class="field">
      <%= f.label :url %> <i>(site main page adress including http://)</i><br>
      <%= f.url_field :url %>
    </div>

    <div class="field">
      <%= f.label :image %>
      <label class="avatarUpload">
        <%= f.file_field :image %>
        <span>Choose image</span>
      </label>
    </div>

    <legend class="reg-form"><span class="number">2</span>Add realms</legend>
      <%= link_to_add_realms "+ Add realms", f, :realms %>
    


    <div class="actions">
      <input name="commit" value="Update" class="profile-form" type="submit">
    </div>
  </fieldset>
<% end %>

</div>