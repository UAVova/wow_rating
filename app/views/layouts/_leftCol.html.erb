<div class="left-col">
  <div class="sidebar">
    <div class="login-form">
      <label class="login-label">Login:</label>
      <input type="text" class="login-input">

      <label class="password-label">Password:</label>
      <input type="password" class="password-input">

      <button class="login-button">Login</button>
      
      <%= image_tag 'selector.png', :class => 'selector-img' %>
      <div class="social-buttons">
        <%= link_to "Facebook",  user_omniauth_authorize_path(:facebook),  :class => "facebook-btn" %>
        <%= link_to "Vkontakte", user_omniauth_authorize_path(:vkontakte), :class => "vk-btn" %>
      </div>
    </div>
  </div>
</div>